<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/prof_list_click_label"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/RippleStyleBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:id="@+id/lyt_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:minHeight="?attr/actionBarSize"
            android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/prof_list_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/spacing_large"
                android:layout_marginRight="@dimen/spacing_large"
                android:layout_marginTop="@dimen/space_margin"
                android:src="@drawable/ic_accessibility"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorPrimary"
        />

        <View
                android:layout_width="@dimen/spacing_medium"
                android:layout_height="0dp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/space_margin"
                    android:paddingTop="@dimen/space_margin">

                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/prof_list_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/space_margin"
                            android:layout_marginRight="@dimen/space_margin"
                            android:text="Name"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/colorPrimary" />
                    <TextView
                            android:id="@+id/prof_list_surname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/space_margin"
                            android:layout_marginRight="@dimen/space_margin"
                            android:text="surName"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/colorPrimary" />
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/space_margin"
                            android:layout_marginRight="@dimen/space_margin"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:maxLines="2"
                            android:text="@string/prof_followers_text"

                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/colorPrimaryDark" />
                    <TextView
                            android:id="@+id/prof_list_followers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/space_margin"
                            android:layout_marginRight="@dimen/space_margin"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:maxLines="2"
                            android:text=""

                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/colorPrimaryDark" />
                </LinearLayout>

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGray" />

        </LinearLayout>

    </LinearLayout>

</com.balysv.materialripple.MaterialRippleLayout>